@model GameReview.ViewModels.GenreIndexViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="fontFam boldFont pinkUnderline">Genres</h2>

<div class="row justify-content-center">
    @foreach (var genre in Model.Genres)
    {
        <div class="col-md-3 text-center w-75 genreBox align-middle">
            @Html.ActionLink(genre.Name, "GenreSearchResultAsync", "Game", new {genreId = genre.Id}, null)
        </div>
    }
</div>